# Production Environment Variables
# Copy this to .env and fill in your values

# TTS Backend API (via Tailscale)
# This should point to your Moya server's Tailscale IP
# Example: http://100.64.1.2:8765
TTS_API_URL=http://YOUR_TAILSCALE_IP:8765

# Domain (replace with your actual domain)
DOMAIN=demo.open-tts-studio.com

# Email for Let's Encrypt SSL
LETSENCRYPT_EMAIL=your@email.com

# Optional: Basic auth for admin access
# Generate with: htpasswd -c .htpasswd admin
ADMIN_USER=admin
ADMIN_PASSWORD=changeme

# Rate limiting (requests per minute for generation)
RATE_LIMIT_GENERATION=2

# Max file upload size (MB)
MAX_UPLOAD_SIZE=10
